{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run CLI",
            "command": "${workspaceFolder}/gradlew",
            "type": "shell",
            "args": [
                "run",
                "--args",
                "${input:githubUsername}"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ],
    "inputs": [
        {
            "id": "githubUsername",
            "type": "promptString",
            "description": "GitHub user to query"
        }
    ]
}